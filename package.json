{
  "private": true,
  "name": "purescript-cherry",
  "scripts": {
    "clean": "rm -rf example/output",
    "compile": "psc src/Cherry.purs example/Main.purs 'bower_components/purescript-*/src/**/*.purs' -o example/output",
    "bundle": "psc-bundle example/output/**/*.js -m Main --main Main -o example/output/bundle.js",
    "build": "npm run compile && npm run bundle",
    "start": "node server.js"
  },
  "devDependencies": {
    "browser-sync": "2.18.8",
    "connect-history-api-fallback": "1.3.0",
    "purescript": "0.10.7"
  }
}
